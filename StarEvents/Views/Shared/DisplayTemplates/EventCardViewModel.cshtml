@model StarEvents.Models.EventCardViewModel

@{
    var dateStr = Model.EventDate.ToString("MMM dd, yyyy");
    var timeStr = Model.EventDate.ToString("h:mm tt");
    var hasPromos = Model.Promotions != null && Model.Promotions.Count > 0;
    var promoCount = hasPromos ? Model.Promotions.Count : 0;
    var mainPromo = hasPromos ? Model.Promotions[0] : null;
}

<div class="event-card-modern"
     data-category="@Model.Category"
     data-date="@Model.EventDate.ToString("yyyy-MM-dd")"
     data-location="@Model.Location?.ToLower()">
    <div class="event-card-img-wrap-modern">
        <img src="@Url.Content(string.IsNullOrEmpty(Model.ImageUrl) ? "/Content/event-placeholder.jpg" : Model.ImageUrl)" class="event-card-img-modern" alt="@Model.Title" />

        @if (hasPromos)
        {
            <div class="promo-banner-overlay" style="background:@mainPromo.Color;" tabindex="0">
                @if (promoCount == 1)
                {
                    @Html.Raw($"{mainPromo.Icon} <span class='promo-label-text'>{mainPromo.Label}</span>")
                    if (!string.IsNullOrEmpty(mainPromo.Description))
                    {
                        <div class="promo-popover-on-label">
                            <ul>
                                <li>
                                    <span class="promo-offer-icon">@mainPromo.Icon</span>
                                    <span class="promo-offer-label">@mainPromo.Label</span>
                                    <span class="promo-offer-desc">@mainPromo.Description</span>
                                </li>
                            </ul>
                        </div>
                    }
                }
                else
                {
                    @Html.Raw($"🎉 {promoCount} Offers Available ▼")
                    <div class="promo-popover-on-label">
                        <ul>
                            @foreach (var promo in Model.Promotions)
                            {
                                <li>
                                    <span class="promo-offer-icon">@promo.Icon</span>
                                    <span class="promo-offer-label">@promo.Label</span>
                                    @if (!string.IsNullOrEmpty(promo.Description))
                                    {
                                        <span class="promo-offer-desc">@promo.Description</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        }

        <div class="event-category-badge-modern">
            @Html.Raw(GetCategoryIcon(Model.Category))
            <span>@Model.Category</span>
        </div>
    </div>
    <div class="event-card-body-modern">
        <h3 class="event-card-title-modern">@Model.Title</h3>
        <div class="event-card-meta-modern">
            <span class="meta-item"><i class="far fa-calendar-alt"></i> @dateStr</span>
            <span class="meta-sep">&bull;</span>
            <span class="meta-item"><i class="far fa-clock"></i> @timeStr</span>
        </div>
        <div class="event-card-location-modern">
            <i class="fas fa-map-marker-alt"></i>
            <span>@Model.VenueName</span>
        </div>
        <div class="event-card-price-modern">
            <span class="event-price-modern">@Model.StartingPrice.ToString("N0") LKR</span>
            <span class="event-upwards">upwards</span>
        </div>
    </div>
    <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="event-card-btn-modern">
        Buy Tickets
    </a>
</div>

@functions{
    public string GetCategoryIcon(string category)
    {
        switch (category?.ToLower())
        {
            case "concert": return "<i class='fas fa-music'></i>";
            case "theatre": return "<i class='fas fa-theater-masks'></i>";
            case "cultural": return "<i class='fas fa-landmark'></i>";
            case "sports": return "<i class='fas fa-running'></i>";
            case "comedy": return "<i class='fas fa-laugh'></i>";
            case "conference": return "<i class='fas fa-users'></i>";
            case "workshop": return "<i class='fas fa-graduation-cap'></i>";
            case "exhibition": return "<i class='fas fa-palette'></i>";
            case "festival": return "<i class='fas fa-glass-cheers'></i>";
            default: return "<i class='fas fa-calendar'></i>";
        }
    }
}

<style>
    .event-card-modern {
        background: #ffffff;
        border-radius: 24px;
        box-shadow: 0 4px 24px rgba(27, 33, 26, 0.06);
        border: 1px solid rgba(236, 238, 242, 0.8);
        max-width: 340px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        backdrop-filter: blur(10px);
    }
    .event-card-modern:hover {
        box-shadow: 0 12px 40px rgba(27, 33, 26, 0.12);
        transform: translateY(-6px);
        border-color: rgba(236, 238, 242, 1);
    }
    .event-card-img-wrap-modern {
        position: relative;
        width: 100%;
        aspect-ratio: 4 / 3;
        overflow: hidden;
        border-radius: 24px 24px 0 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .event-card-img-modern {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .event-card-modern:hover .event-card-img-modern {
        transform: scale(1.08);
    }
    .event-category-badge-modern {
        position: absolute;
        top: 16px;
        left: 16px;
        background: rgba(27, 33, 26, 0.85);
        backdrop-filter: blur(12px);
        color: #fff;
        border-radius: 999px;
        font-size: 0.875rem;
        padding: 8px 18px 8px 14px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 16px rgba(27, 33, 26, 0.2);
        z-index: 2;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .event-card-modern:hover .event-category-badge-modern {
        background: rgba(27, 33, 26, 0.95);
        transform: scale(1.05);
    }
    .event-category-badge-modern i {
        color: #fff;
        font-size: 1em;
    }

    .promo-banner-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 14px 18px;
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.92) 0%, rgba(21, 128, 61, 0.92) 100%) !important;
        color: #fff;
        font-size: 1rem;
        font-weight: 700;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        box-shadow: 0 -6px 24px rgba(34, 197, 94, 0.25);
        cursor: pointer;
        z-index: 3;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        backdrop-filter: blur(16px);
        border-top: 1px solid rgba(255, 255, 255, 0.25);
    }

    .promo-banner-overlay:hover,
    .promo-banner-overlay:focus {
        background: linear-gradient(135deg, rgba(34, 197, 94, 1) 0%, rgba(21, 128, 61, 1) 100%) !important;
        transform: translateY(-3px);
        box-shadow: 0 -8px 32px rgba(34, 197, 94, 0.35);
    }

    .promo-banner-overlay:active {
        transform: translateY(0);
    }

    .promo-banner-overlay .promo-label-text {
        font-weight: 700;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .promo-banner-overlay .promo-popover-on-label {
        display: none;
        position: absolute;
        bottom: 105%;
        left: 50%;
        transform: translateX(-50%);
        min-width: 300px;
        background: #ffffff;
        color: #1B211A;
        border-radius: 20px;
        box-shadow: 0 16px 48px rgba(27, 33, 26, 0.2);
        padding: 20px 0;
        z-index: 10;
        animation: slideUpFade 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        border: 1px solid rgba(236, 238, 242, 0.8);
        backdrop-filter: blur(12px);
    }

    @@keyframes slideUpFade {
        from {
            opacity: 0;
            transform: translateX(-50%) translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }
    }

    .promo-banner-overlay:hover .promo-popover-on-label,
    .promo-banner-overlay:focus .promo-popover-on-label {
        display: block;
    }

    .promo-popover-on-label ul {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .promo-popover-on-label li {
        padding: 12px 20px;
        display: flex;
        align-items: flex-start;
        transition: background-color 0.2s ease;
    }

    .promo-popover-on-label li:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }

    .promo-offer-icon {
        margin-right: 12px;
        font-size: 1.1em;
        margin-top: 2px;
        flex-shrink: 0;
    }

    .promo-offer-label {
        font-weight: 700;
        color: #1f2937;
        font-size: 0.95rem;
    }

    .promo-offer-desc {
        color: #6b7280;
        margin-left: 8px;
        font-size: 0.92em;
        line-height: 1.4;
    }

    .promo-popover-on-label li:not(:last-child) {
        border-bottom: 1px solid #f1f1f1;
    }

    /* Add a subtle arrow to the popover */
    .promo-popover-on-label::after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 8px solid transparent;
        border-top-color: #fff;
    }

    .event-card-body-modern {
        padding: 28px 24px 0 24px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }
    .event-card-title-modern {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-weight: 700;
        font-size: 1.25rem;
        color: #1B211A;
        margin-bottom: 12px;
        line-height: 1.3;
        letter-spacing: -0.01em;
    }
    .event-card-meta-modern {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 10px;
        font-weight: 500;
    }
    .meta-item {
        display: flex;
        align-items: center;
    }
    .meta-item i {
        margin-right: 6px;
        color: #94a3b8;
        font-size: 0.9em;
    }
    .meta-sep {
        color: #cbd5e1;
        font-size: 1em;
        font-weight: 300;
    }
    .event-card-location-modern {
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
    }
    .event-card-location-modern i {
        color: #94a3b8;
        font-size: 0.9em;
    }
    .event-card-desc-modern {
        color: #525d72;
        font-size: 0.99rem;
        margin-bottom: 14px;
        margin-top: 0;
    }
    .event-card-price-modern {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1B211A;
        margin-bottom: 20px;
        margin-top: auto;
        display: flex;
        align-items: baseline;
        gap: 8px;
    }
    .event-price-modern {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-size: 1.375rem;
        font-weight: 800;
        color: #1B211A;
        letter-spacing: -0.02em;
    }
    .event-upwards {
        color: #94a3b8;
        font-size: 0.875rem;
        font-weight: 500;
    }
    .event-card-btn-modern {
        width: 100%;
        background: #1B211A;
        color: #fff;
        border: none;
        border-radius: 0 0 24px 24px;
        font-weight: 700;
        font-size: 1rem;
        padding: 18px 0;
        text-align: center;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        margin-top: auto;
        box-shadow: 0 4px 16px rgba(27, 33, 26, 0.12);
        letter-spacing: 0.02em;
        cursor: pointer;
        display: block;
        position: relative;
        overflow: hidden;
    }
    .event-card-btn-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transition: left 0.5s ease;
    }
    .event-card-btn-modern:hover::before {
        left: 100%;
    }
    .event-card-btn-modern:hover, 
    .event-card-btn-modern:focus {
        background: #2A3329;
        color: #fff;
        text-decoration: none;
        box-shadow: 0 8px 24px rgba(27, 33, 26, 0.2);
        transform: translateY(-1px);
    }
    .event-card-btn-modern:active {
        transform: translateY(0);
    }

    @@media (max-width: 768px) {
        .event-card-modern {
            max-width: 100%;
            border-radius: 20px;
        }
        .event-card-img-wrap-modern {
            aspect-ratio: 16 / 9;
            border-radius: 20px 20px 0 0;
        }
        .event-card-body-modern {
            padding: 24px 20px 0 20px;
        }
        .event-card-title-modern {
            font-size: 1.125rem;
        }
        .event-card-btn-modern {
            border-radius: 0 0 20px 20px;
            padding: 16px 0;
        }
    }
</style>