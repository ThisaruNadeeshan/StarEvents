@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #1B211A;
        --primary-hover: #2A3329;
        --secondary-color: #FFB800;
        --dark-text-color: #0f172a;
        --danger-color: #dc2626;
        --success-color: #16a34a;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .login-page-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 20px 40px;
        position: relative;
        overflow: hidden;
    }

    .login-page-wrapper::before {
        content: '';
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(255, 184, 0, 0.15) 0%, transparent 70%);
        top: -300px;
        right: -200px;
        border-radius: 50%;
        animation: pulse 8s ease-in-out infinite;
    }

    .login-page-wrapper::after {
        content: '';
        position: absolute;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(27, 33, 26, 0.3) 0%, transparent 70%);
        bottom: -200px;
        left: -100px;
        border-radius: 50%;
        animation: pulse 8s ease-in-out infinite reverse;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.1); opacity: 0.8; }
    }

    .login-section {
        width: 100%;
        max-width: 480px;
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        box-shadow: 
            0 0 0 1px rgba(255, 255, 255, 0.1),
            0 20px 60px rgba(0, 0, 0, 0.3);
        padding: 48px 40px;
        position: relative;
        z-index: 10;
    }

    .login-header {
        text-align: center;
        margin-bottom: 36px;
    }

    .login-logo {
        width: 72px;
        height: 72px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        box-shadow: 0 8px 32px rgba(255, 184, 0, 0.25);
        position: relative;
    }

    .login-logo::before {
        content: '';
        position: absolute;
        inset: -2px;
        border-radius: 22px;
        padding: 2px;
        background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        opacity: 0.3;
    }

    .login-logo i {
        font-size: 2rem;
        color: white;
        position: relative;
        z-index: 1;
    }

    .login-title {
        font-weight: 800;
        font-size: 2.25rem;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
        color: var(--dark-text-color);
    }

    .login-lead {
        font-size: 1rem;
        font-weight: 500;
        color: #64748b;
        line-height: 1.6;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.9375rem;
        margin-bottom: 10px;
        display: block;
        color: var(--dark-text-color);
        letter-spacing: -0.01em;
    }

    .form-control {
        border-radius: 12px !important;
        border: 2px solid #e2e8f0;
        font-size: 1rem;
        padding: 14px 18px;
        color: var(--dark-text-color);
        background: #ffffff;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
        box-sizing: border-box;
        font-family: 'Inter', sans-serif;
        font-weight: 500;
    }

    .form-control::placeholder {
        color: #94a3b8;
        font-weight: 400;
    }

    .form-control:hover {
        border-color: #cbd5e1;
    }

    .form-control:focus {
        border-color: var(--secondary-color);
        background: #ffffff;
        outline: none;
        box-shadow: 0 0 0 4px rgba(255, 184, 0, 0.1);
    }

    .password-wrapper {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 18px;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        outline: none;
        cursor: pointer;
        color: #94a3b8;
        font-size: 1.125rem;
        padding: 8px;
        transition: all 0.3s ease;
        border-radius: 6px;
    }

    .password-toggle:hover {
        color: var(--secondary-color);
        background: rgba(255, 184, 0, 0.1);
    }

    .btn-primary {
        font-size: 1rem;
        font-weight: 700;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--primary-color) 0%, #2d3b2a 100%);
        border: none;
        box-shadow: 0 8px 24px rgba(27, 33, 26, 0.25);
        padding: 16px 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        letter-spacing: 0.02em;
        width: 100%;
        cursor: pointer;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.7s ease;
    }

    .btn-primary:hover::before {
        left: 100%;
    }

    .btn-primary:hover,
    .btn-primary:focus {
        background: linear-gradient(135deg, var(--secondary-color) 0%, #ffa500 100%);
        box-shadow: 0 12px 32px rgba(255, 184, 0, 0.4);
        transform: translateY(-2px);
        text-decoration: none;
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .btn-primary i {
        margin-right: 8px;
    }

    .alert-danger {
        border-radius: 12px;
        font-size: 0.9375rem;
        margin-bottom: 24px;
        padding: 14px 18px;
        background: #fef2f2;
        color: var(--danger-color);
        border: 1px solid #fecaca;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-danger::before {
        content: '\f071';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        font-size: 1.125rem;
    }

    .alert-success {
        border-radius: 12px;
        font-size: 0.9375rem;
        margin-bottom: 24px;
        padding: 14px 18px;
        background: #f0fdf4;
        color: var(--success-color);
        border: 1px solid #bbf7d0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success::before {
        content: '\f058';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        font-size: 1.125rem;
    }

    .login-footer {
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid #e2e8f0;
        text-align: center;
        font-size: 0.9375rem;
        color: #64748b;
    }

    .login-footer a {
        color: var(--primary-color);
        font-weight: 700;
        text-decoration: none;
        transition: color 0.3s ease;
        position: relative;
    }

    .login-footer a::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--secondary-color);
        transition: width 0.3s ease;
    }

    .login-footer a:hover {
        color: var(--secondary-color);
    }

    .login-footer a:hover::after {
        width: 100%;
    }

    .mt-3 {
        margin-top: 1.5rem !important;
    }

    @@media (max-width: 768px) {
        .login-page-wrapper {
            padding: 80px 16px 24px;
        }

        .login-section {
            padding: 36px 28px;
        }

        .login-title {
            font-size: 1.875rem;
        }

        .login-logo {
            width: 64px;
            height: 64px;
        }

        .login-logo i {
            font-size: 1.75rem;
        }
    }
</style>

<div class="login-page-wrapper">
    <div class="login-section">
        <div class="login-header">
            <div class="login-logo">
                <i class="fas fa-bolt"></i>
            </div>
            <div class="login-title">Welcome Back</div>
            <div class="login-lead">Sign in to continue to StarEvents</div>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert-danger">@ViewBag.Error</div>
        }
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label" for="Email">Email</label>
                <input type="email" name="Email" id="Email" class="form-control" required placeholder="your@email.com" autocomplete="username" />
            </div>

            <div class="form-group">
                <label class="form-label" for="Password">Password</label>
                <div class="password-wrapper">
                    <input type="password" name="Password" id="Password" class="form-control" required placeholder="Enter your password" autocomplete="current-password" />
                    <button type="button" class="password-toggle" tabindex="-1" data-target="Password" aria-label="Show/hide password">
                        <i class="far fa-eye"></i>
                    </button>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">
                <i class="fas fa-sign-in-alt"></i>Sign In to Your Account
            </button>

            <div class="login-footer">
                Don't have an account? <a href="/Register">Create Account</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Password show/hide toggle
            document.querySelectorAll('.password-toggle').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = btn.getAttribute('data-target');
                    const pwInput = document.getElementById(targetId);
                    const icon = btn.querySelector('i');
                    if (pwInput.type === 'password') {
                        pwInput.type = 'text';
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    } else {
                        pwInput.type = 'password';
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    }
                });
            });
        });
    </script>
}