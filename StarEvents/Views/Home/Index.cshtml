            <body>
                <!-- HERO -->
                <div class="hero-banner-custom section-spacer">
                    <div class="container">
                        <h1>Discover Your Next Experience</h1>
                        <p class="lead">Find and book tickets for concerts, theatre, cultural events and more</p>
                        <form class="hero-search-bar-wrapper" action="/Events/Search" method="get" autocomplete="off">
                            <div class="hero-search-bar">
                                <span class="search-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#23436e" stroke-width="2.2"
                                        stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="11" cy="11" r="7"></circle>
                                        <line x1="18" y1="18" x2="15.5" y2="15.5"></line>
                                    </svg>
                                </span>
                                <input type="search" name="query" placeholder="Search by Event, Category, Date or Location"
                                    aria-label="Search" required />
                                <button type="submit">Search</button>
                            </div>
                        </form>
                        <div class="hero-features">
                            <div class="hero-feature-item">
                                <i class="fas fa-calendar-check"></i>
                                <span>Browse Events</span>
                            </div>
                            <div class="hero-feature-item">
                                <i class="fas fa-tags"></i>
                                <span>Filter by Category</span>
                            </div>
                            <div class="hero-feature-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>Find by Location</span>
                            </div>
                            <div class="hero-feature-item">
                                <i class="fas fa-clock"></i>
                                <span>Search by Date</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FEATURED EVENTS -->
                <div class="featured-events-section section-spacer bg-offwhite">
                    <div class="centered-container">
                        <div class="event-section-header text-center">
                            <h2 class="featured-events-heading section-heading mb-3">
                                Featured <span class="text-primary">Events</span>
                            </h2>
                            <div class="event-filter-btns">
                                <a href="/Events/Featured?filter=thismonth"
                                    class="month-btn @(ViewBag.CurrentFilter=="thismonth" ? "active" : "")">This Month</a>
                                <a href="/Events/Featured?filter=nextmonth"
                                    class="month-btn @(ViewBag.CurrentFilter=="nextmonth" ? "active" : "")">Next Month</a>
                                <a href="/Events/Featured?filter=upcoming"
                                    class="month-btn @(ViewBag.CurrentFilter=="upcoming" ? "active" : "")">Upcoming</a>
                                <a href="/Events/Featured?filter=featured"
                                    class="month-btn @(ViewBag.CurrentFilter=="featured" ? "active" : "")">Featured</a>
                            </div>
                        </div>
                        @if (Model?.FeaturedEvents != null && Model.FeaturedEvents.Count > 0)
                        {
                            <div class="event-cards-grid">
                                @foreach (var ev in Model.FeaturedEvents)
                                {
                                    @Html.DisplayFor(modelItem => ev)
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-events-state">
                                <i class="fas fa-calendar-times empty-events-icon"></i>
                                <h4 class="empty-events-title">No featured events available</h4>
                                <p class="empty-events-text">We're updating our selection—please revisit soon!</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- SYSTEM FEATURES -->
                <div class="system-features-section section-spacer">
                    <div class="centered-container">
                        <div class="features-header text-center">
                            <h2 class="features-heading">Why Choose StarEvents</h2>
                            <p class="features-subtitle">
                                Discover a seamless event booking experience with powerful features designed for your convenience
                            </p>
                        </div>
                        <div class="features-grid">
                            <div class="feature-card">
                                <div class="feature-icon-wrapper">
                                    <i class="fas fa-search feature-icon"></i>
                                </div>
                                <h3 class="feature-title">Advanced Search</h3>
                                <p class="feature-description">
                                    Find events quickly with powerful search filters by category, date, location, and more
                                </p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon-wrapper">
                                    <i class="fas fa-ticket-alt feature-icon"></i>
                                </div>
                                <h3 class="feature-title">Easy Booking</h3>
                                <p class="feature-description">
                                    Book tickets in just a few clicks with secure payment processing and instant confirmation
                                </p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon-wrapper">
                                    <i class="fas fa-calendar-check feature-icon"></i>
                                </div>
                                <h3 class="feature-title">Manage Bookings</h3>
                                <p class="feature-description">
                                    View all your bookings, track upcoming events, and access your tickets anytime
                                </p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon-wrapper">
                                    <i class="fas fa-percent feature-icon"></i>
                                </div>
                                <h3 class="feature-title">Exclusive Discounts</h3>
                                <p class="feature-description">
                                    Access special promotions, early bird offers, and member-only discounts on events
                                </p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon-wrapper">
                                    <i class="fas fa-star feature-icon"></i>
                                </div>
                                <h3 class="feature-title">Loyalty Rewards</h3>
                                <p class="feature-description">
                                    Earn points with every purchase and redeem them for discounts on future bookings
                                </p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon-wrapper">
                                    <i class="fas fa-shield-alt feature-icon"></i>
                                </div>
                                <h3 class="feature-title">Secure & Safe</h3>
                                <p class="feature-description">
                                    Your data and payments are protected with industry-standard security measures
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CATEGORY CARDS -->
                <div class="category-section section-spacer">
                    <div class="centered-container">
                        <h2 class="section-heading">Explore Event Categories</h2>
                        <p class="text-muted" style="text-align: center;">
                            Choose a category to discover events tailored to your interests.
                        </p>
                        <div class="category-cards-row">
                            <a href="/Events/Category/Concert" class="category-card text-decoration-none">
                                <div class="category-icon mb-2"><i class="fas fa-guitar"></i></div>
                                <div class="category-label">Concerts</div>
                            </a>
                            <a href="/Events/Category/Cultural" class="category-card text-decoration-none">
                                <div class="category-icon mb-2"><i class="fas fa-globe"></i></div>
                                <div class="category-label">Cultural</div>
                            </a>
                            <a href="/Events/Category/Theatre" class="category-card text-decoration-none">
                                <div class="category-icon mb-2"><i class="fas fa-play-circle"></i></div>
                                <div class="category-label">Theatre</div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- LOYALTY PROMO -->
                <div class="loyalty-promo-banner">
                    <div class="loyalty-promo-inner">
                        <div class="loyalty-promo-illus">
                            <img src="~/Content/benifits_img.png" alt="Loyalty Program Illustration" />
                        </div>

                        <div class="loyalty-promo-content">
                            <h2 class="loyalty-promo-title">Unlock Exclusive Rewards & Benefits</h2>
                            <p class="loyalty-promo-desc">
                                Join our loyalty program and transform every event booking into valuable rewards. Earn points with
                                each purchase, unlock exclusive discounts, and enjoy priority access to the most sought-after
                                events.
                            </p>
                            <div class="loyalty-promo-features">
                                <div class="loyalty-promo-feature">
                                    <i class="fas fa-star"></i>
                                    <span>Earn Points on Every Purchase</span>
                                </div>
                                <div class="loyalty-promo-feature">
                                    <i class="fas fa-ticket-alt"></i>
                                    <span>Early Access to Events</span>
                                </div>
                                <div class="loyalty-promo-feature">
                                    <i class="fas fa-gift"></i>
                                    <span>Exclusive Member Discounts</span>
                                </div>
                                <div class="loyalty-promo-feature">
                                    <i class="fas fa-crown"></i>
                                    <span>VIP Perks & Benefits</span>
                                </div>
                            </div>
                            <div class="loyalty-promo-actions">
                                <a href="/Account/Register" class="btn btn-primary">
                                    Join Now
                                </a>
                                <a href="/Loyalty/Details" class="btn btn-light">
                                    Learn More
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
