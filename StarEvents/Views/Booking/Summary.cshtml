@model StarEvents.ViewModels.BookingSummaryViewModel

@{
    ViewBag.Title = "Booking Summary";
}

<style>
    :root {
        --primary: #1B211A;
        --primary-light: #f8faf9;
        --primary-dark: #2A3329;
        --secondary: #FFB800;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark: #111827;
        --gray: #6b7280;
        --gray-light: #fafbfc;
        --gray-border: #e5e7eb;
        --border-radius: 16px;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background: #ffffff;
        line-height: 1.6;
        color: var(--dark);
        min-height: 100vh;
        padding: 20px 0;
    }

    .summary-container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: var(--border-radius);
        overflow: hidden;
        border: 2px solid var(--gray-border);
    }

    /* Clean Header */
    .summary-header {
        text-align: center;
        padding: 48px 40px;
        background: var(--primary);
        color: white;
    }

    .summary-header h2 {
        font-size: 2.25rem;
        font-weight: 800;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .summary-subtitle {
        font-size: 1rem;
        opacity: 0.9;
        font-weight: 500;
        line-height: 1.5;
    }

    .summary-content {
        padding: 40px;
    }

    /* Clean Event Section */
    .event-card {
        background: var(--gray-light);
        border-radius: var(--border-radius);
        margin-bottom: 32px;
        overflow: hidden;
        border: 1px solid var(--gray-border);
    }

    .event-header {
        background: var(--primary);
        color: white;
        padding: 24px 28px;
    }

    .event-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 6px;
    }

    .event-subtitle {
        font-size: 0.9375rem;
        opacity: 0.9;
    }

    .event-body {
        padding: 28px;
        display: grid;
        grid-template-columns: 140px 1fr;
        gap: 24px;
        align-items: start;
        background: white;
    }

    .event-image {
        width: 140px;
        height: 140px;
        border-radius: 12px;
        object-fit: cover;
        border: 1px solid var(--gray-border);
    }

    .event-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .detail-icon {
        width: 36px;
        height: 36px;
        background: var(--primary);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.875rem;
        flex-shrink: 0;
    }

    .detail-content h4 {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--gray);
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-content p {
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }

    /* Clean Ticket Section */
    .ticket-card {
        background: white;
        border-radius: var(--border-radius);
        margin-bottom: 32px;
        overflow: hidden;
        border: 1px solid var(--gray-border);
    }

    .ticket-header {
        background: var(--gray-light);
        padding: 20px 28px;
        border-bottom: 2px solid var(--gray-border);
    }

    .ticket-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--dark);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .ticket-icon {
        width: 36px;
        height: 36px;
        background: var(--primary);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.875rem;
    }

    .ticket-body {
        padding: 28px;
    }

    .ticket-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0;
        border-bottom: 1px solid var(--gray-border);
    }

    .ticket-row:last-child {
        border-bottom: none;
    }

    .ticket-label {
        font-weight: 600;
        color: var(--dark);
        font-size: 0.9375rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .ticket-label i {
        color: var(--secondary);
        font-size: 0.875rem;
    }

    .ticket-value {
        font-weight: 600;
        color: var(--dark);
        font-size: 0.9375rem;
        text-align: right;
    }

    .old-price {
        color: var(--gray);
        text-decoration: line-through;
        font-size: 0.875rem;
        margin-right: 8px;
        font-weight: 500;
    }

    .discount-badge {
        background: var(--success);
        color: white;
        padding: 10px 18px;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 16px;
    }

    /* Clean Total Section */
    .total-card {
        background: var(--gray-light);
        border-radius: var(--border-radius);
        padding: 32px;
        margin-bottom: 32px;
        border: 1px solid var(--gray-border);
        text-align: center;
    }

    .total-label {
        font-size: 0.875rem;
        color: var(--gray);
        margin-bottom: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .total-amount {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary);
        line-height: 1;
        margin-bottom: 8px;
    }

    .total-currency {
        font-size: 1.125rem;
        color: var(--gray);
        font-weight: 600;
    }

    /* Clean Customer Section */
    .customer-card {
        background: white;
        border-radius: var(--border-radius);
        margin-bottom: 32px;
        overflow: hidden;
        border: 1px solid var(--gray-border);
    }

    .customer-header {
        background: var(--gray-light);
        padding: 20px 28px;
        border-bottom: 2px solid var(--gray-border);
    }

    .customer-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--dark);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .customer-icon {
        width: 36px;
        height: 36px;
        background: var(--primary);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.875rem;
    }

    .customer-body {
        padding: 28px;
    }

    .customer-profile {
        display: flex;
        align-items: center;
        gap: 18px;
        margin-bottom: 24px;
    }

    .customer-avatar {
        width: 64px;
        height: 64px;
        background: var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.75rem;
        flex-shrink: 0;
    }

    .customer-info {
        flex: 1;
    }

    .customer-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--dark);
    }

    .customer-contact {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 14px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 14px 16px;
        background: var(--gray-light);
        border-radius: 12px;
        border: 1px solid var(--gray-border);
    }

    .contact-icon {
        width: 36px;
        height: 36px;
        background: var(--primary);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.875rem;
        flex-shrink: 0;
    }

    .contact-details h4 {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--gray);
        margin-bottom: 2px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .contact-details p {
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }

    /* Clean Checkout Section */
    .checkout-section {
        text-align: center;
        padding: 32px;
        background: white;
        border-radius: var(--border-radius);
        border: 1px solid var(--gray-border);
        margin-bottom: 20px;
    }

    .security-note {
        text-align: center;
        margin-bottom: 24px;
        font-size: 0.875rem;
        color: var(--gray);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px;
        background: var(--gray-light);
        border-radius: 10px;
        font-weight: 500;
    }

    .btn-checkout {
        background: var(--secondary);
        color: var(--primary);
        border: none;
        border-radius: 12px;
        padding: 16px 48px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        letter-spacing: 0.02em;
    }

    .btn-checkout:hover {
        background: var(--primary);
        color: white;
        transform: translateY(-2px);
    }

    /* Back Button */
    .back-section {
        text-align: center;
        margin-top: 24px;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: white;
        color: var(--dark);
        border: 2px solid var(--gray-border);
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.9375rem;
    }

    .btn-back:hover {
        border-color: var(--primary);
        background: var(--primary);
        color: white;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .summary-container {
            margin: 20px;
        }

        .summary-header {
            padding: 36px 24px;
        }

        .summary-header h2 {
            font-size: 2rem;
        }

        .summary-content {
            padding: 28px 20px;
        }

        .event-body {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .event-image {
            width: 100%;
            max-width: 200px;
            margin: 0 auto;
            height: auto;
        }

        .event-details {
            grid-template-columns: 1fr;
        }

        .customer-profile {
            flex-direction: column;
            text-align: center;
            gap: 12px;
        }

        .customer-contact {
            grid-template-columns: 1fr;
        }

        .btn-checkout {
            width: 100%;
            justify-content: center;
            padding: 16px 32px;
        }

        .total-amount {
            font-size: 2.25rem;
        }
    }

    @@media (max-width: 480px) {
        body {
            padding: 10px 0;
        }

        .summary-header h2 {
            font-size: 1.75rem;
        }

        .summary-content {
            padding: 24px 16px;
        }

        .event-header,
        .ticket-header,
        .customer-header {
            padding: 18px 20px;
        }

        .event-body,
        .ticket-body,
        .customer-body {
            padding: 20px;
        }

        .total-amount {
            font-size: 2rem;
        }
    }
</style>

<div class="summary-container">
    <!-- Premium Header -->
    <div class="summary-header">
        <h2>Booking Confirmation</h2>
        <div class="summary-subtitle">Review your booking details and proceed to secure checkout</div>
    </div>

    <!-- Main Content -->
    <div class="summary-content">
        <!-- Premium Event Section -->
        <div class="event-card">
            <div class="event-header">
                <h3 class="event-title">@Model.EventTitle</h3>
                <div class="event-subtitle">@Model.VenueName • @Model.Location</div>
            </div>
            <div class="event-body">
                <img src="@Model.ImageUrl" class="event-image" alt="@Model.EventTitle" />
                <div class="event-details">
                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="detail-content">
                            <h4>Date</h4>
                            <p>@Model.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="detail-content">
                            <h4>Time</h4>
                            <p>@Model.EventDate.ToString("h:mm tt")</p>
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="detail-content">
                            <h4>Venue</h4>
                            <p>@Model.VenueName</p>
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="detail-content">
                            <h4>Category</h4>
                            <p>@Model.Category</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Premium Ticket Section -->
        <div class="ticket-card">
            <div class="ticket-header">
                <h3 class="ticket-title">
                    <div class="ticket-icon">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    Ticket Details
                </h3>
            </div>
            <div class="ticket-body">
                <div class="ticket-row">
                    <div class="ticket-label">
                        <i class="fas fa-ticket-alt"></i>
                        Ticket Type
                    </div>
                    <div class="ticket-value">@Model.SeatCategoryName</div>
                </div>
                <div class="ticket-row">
                    <div class="ticket-label">
                        <i class="fas fa-users"></i>
                        Quantity
                    </div>
                    <div class="ticket-value">@Model.Quantity tickets</div>
                </div>
                <div class="ticket-row">
                    <div class="ticket-label">
                        <i class="fas fa-tag"></i>
                        Price per ticket
                    </div>
                    <div class="ticket-value">
                        @if (Model.OriginalPricePerTicket.HasValue && Model.OriginalPricePerTicket.Value > Model.PricePerTicket)
                        {
                            <span class="old-price">@Model.OriginalPricePerTicket.Value.ToString("N0") LKR</span>
                        }
                        @Model.PricePerTicket.ToString("N0") LKR
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.PromotionLabel))
                {
                    <div class="discount-badge">
                        <i class="fas fa-gift"></i>
                        @Model.PromotionLabel
                    </div>
                }
            </div>
        </div>

        <!-- Premium Total Section -->
        <div class="total-card">
            <div class="total-label">Total Amount to Pay</div>
            <div class="total-amount">@Model.TotalPrice.ToString("N0")</div>
            <div class="total-currency">LKR</div>
        </div>

        <!-- Premium Customer Section -->
        <div class="customer-card">
            <div class="customer-header">
                <h3 class="customer-title">
                    <div class="customer-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    Booking Information
                </h3>
            </div>
            <div class="customer-body">
                <div class="customer-profile">
                    <div class="customer-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="customer-info">
                        <div class="customer-name">@Model.CustomerName</div>
                    </div>
                </div>
                <div class="customer-contact" style="display: flex; gap: 18px; flex-wrap: wrap;">
                    @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                    {
                        <div class="contact-item" style="flex:1 1 200px; background: #f8fafc;">
                            <div class="contact-icon" style="background: #1B211A;">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="contact-details">
                                <h4 style="color:#64748b; font-size:.95rem; margin-bottom:2px; letter-spacing:1px;">EMAIL</h4>
                                <p style="font-size:1.08rem; color:#1f2937;">@Model.CustomerEmail</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                    {
                        <div class="contact-item" style="flex:1 1 200px; background: #f8fafc;">
                            <div class="contact-icon" style="background: #1B211A;">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="contact-details">
                                <h4 style="color:#64748b; font-size:.95rem; margin-bottom:2px; letter-spacing:1px;">PHONE</h4>
                                <p style="font-size:1.08rem; color:#1f2937;">@Model.CustomerPhone</p>
                            </div>
                        </div>
                    }
                </div>
                @if (Model.PointsEarnedThisBooking > 0)
                {
                    <div style="margin-top:28px; padding:15px 22px; background:#f0fdf4; border:1.5px solid #22c55e; border-radius:12px; display:flex; align-items:center; gap:16px;">
                        <div style="font-size:1.4rem; color:#22c55e;"><i class="fas fa-gift"></i></div>
                        <div>
                            <div style="font-size:.98rem; color:#64748b; font-weight:700; text-transform:uppercase; letter-spacing:1px;">EARN ON THIS BOOKING</div>
                            <div style="font-size:1.12rem; color:#166534; font-weight:500;">
                                You'll earn <strong>@Model.PointsEarnedThisBooking</strong> points for this booking
                            </div>
                        </div>
                    </div>
                }
                <div style="margin-top:15px; color:#1B211A; font-weight:600; font-size:1.01rem; text-align:center;">
                    You can redeem your points for a discount on the next page!
                </div>
            </div>
        </div>

        <!-- Premium Checkout Section -->
        <div class="checkout-section">
            @* Loyalty points redemption note *@
            @if (Model.AvailableLoyaltyPoints > 0)
            {
                <div style="margin-bottom:18px; color:var(--success); font-weight:600; text-align:center;">
                    You can redeem your points for a discount on the next page!
                </div>
            }
            <div class="security-note">
                <i class="fas fa-shield-alt"></i>
                <span>256-bit SSL Encrypted • Secure Payment Processing</span>
            </div>

            <!-- Use GET so the next page receives all parameters as query string -->
            <form method="get" action="@Url.Action("Checkout", "Checkout")">
                <input type="hidden" name="EventId" value="@Model.EventId" />
                <input type="hidden" name="SeatCategoryId" value="@Model.SeatCategoryId" />
                <input type="hidden" name="Quantity" value="@Model.Quantity" />
                <button type="submit" class="btn-checkout">
                    <i class="fas fa-credit-card"></i>
                    Proceed to Secure Checkout
                </button>
            </form>
        </div>

        <!-- Back Navigation -->
        <div class="back-section">
            <a href="javascript:history.back()" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Back to Event Details
            </a>
        </div>
    </div>
</div>